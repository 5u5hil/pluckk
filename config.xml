<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.pluckk"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>Pluckk</name>
    <preference name="phonegap-version" value="3.7.0" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="true" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="permissions" value="none"/>
	<preference name="android-windowSoftInputMode" value="stateVisible|adjustResize" />

    <description>
        Want it? Pluckk it! Your one stop shop for all your groceries need! 
    </description>

    <author href="http://www.infinisystems.com" email="">
        Infini Systems
    </author>
    <icon src="icon.png" />
    <gap:splash src="splash.png" />
    <gap:plugin name="org.apache.cordova.splashscreen" version="0.3.4" />

    <gap:plugin name="com.phonegap.plugins.facebookconnect" version="0.9.0">
        <param name="APP_ID" value="937502589613535" />
        <param name="APP_NAME" value="Pluckk" />
    </gap:plugin>
    
    <gap:plugin name="org.apache.cordova.inappbrowser" version="0.5.2" />

</widget>